<p id="notice"><%= notice %></p>

<h1>Tv Shows</h1>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      
      <th scope="col">Nombre</th>
      <th scope="col">Resumen</th>
      <th scope="col">Lanzamiento</th>
      <th scope="col">Clasificacion</th>
    </tr>
  </thead>
   <tbody>
   
    <% @tv_shows.each do |tv_show| %>
      <tr>
        <td><%= tv_show.name %></td>
        <td><%= tv_show.summary %></td>
        <td><%= tv_show.release_date %></td>
        <td><%= tv_show.rating %></td>
        <td><%= link_to 'Show', tv_show_path(tv_show) %></td>
        <td><%= link_to 'Edit', edit_tv_show_path(tv_show) %></td>
        <td><%= link_to 'Destroy', tv_show, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        
      </tr>
      
    <% end %>
  </tbody>
 

</table>

<br>

<%= link_to 'New Tv Show', new_tv_show_path %>

